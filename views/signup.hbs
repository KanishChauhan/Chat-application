
<!-- Section: Design Block -->

<div id="login" >
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card " style="background-color:rgba(0,0,0,0.4)">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4">

              <h2 class=" text-white fw-bold mb-2 text-uppercase">SignUp</h2>
              <p class="text-white-50 mb-5">Please enter your details</p>
             <!-- 2 column grid layout with text inputs for the first and last names -->
<form class="needs-validation" method="POST" action="/signup" >
{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{error}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
  </button>
</div>
   {{/if}}
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-floating">
                    <input type="text" id="first_name" class="form-control" placeholder="first name" name="first_name" >
                    <label class="form-label" for="first_name">First name</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-floating">
                    <input type="text" id="last_name" class="form-control" placeholder="last name" name="last_name" >
                    <label class="form-label" for="last_name">Last name</label>
                  </div>
                </div>
              </div>

              <!-- Email input -->
              <div class="form-floating mb-4">
                <input type="email" id="email" class="form-control" placeholder="email@gmai.com" name="email">
                <label class="form-label" for="email">Email address</label>
              </div>

              <!-- Password input -->
              <div class="row">

              <div class="col-md-6 mb-4">
                <div class="form-floating">

                <input type="password" id="password" class="form-control" placeholder="password"  name="password" >
                <label class="form-label" for="password">Password</label>
              </div>
                </div>
              <!-- Password input -->

              <div class="col-md-6 mb-4">
              <div class="form-floating">
                <input type="password" id="cpassword" class="form-control" placeholder="confrim password"  name="cpassword" >
                <label class="form-label" for="cpassword">confirm password</label>
              </div>
              </div>
              </div>

            

              <!-- Submit button -->
              <div class="col-12">

              <button type="submit" class="btn btn-outline-light btn-lg col-12 ">
                Sign up
              </button>
              </div>
            </form>

          

            </div>

            <div >
              <p class=" text-white mb-0">Already have an account? <a href="/" class="text-white-50 fw-bold">Login</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
    </div>